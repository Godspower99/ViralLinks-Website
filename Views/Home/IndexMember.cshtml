                              <p class="float-right pr-3 pt-2 post_item_date">@post.Post.TimeStamp.GetTimeAgo()</p>
                            </div> 
                            <!--Subject-->
                            <div class="col-12">
                              <a href="@baseUri/posts/member?postid=@post.Post.PostId" class ="pl-3 pt-0"><p class="post_item_subject">@post.Post.Subject</p></a>
                            </div>      
                            <!--Description--> 
