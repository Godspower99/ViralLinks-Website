<script>
  var certifyPost = function(baseUrl,postid)
  {
    var e = document.getElementById(postid);
    var e_parent = e.parentElement;
    fetch(baseUrl +'/posts/certify-post?postid=' + postid, {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        }})
    .then(response => response.json())
    .then(data => {
      if(data.certified)
        e_parent.innerHTML = "<i id=\"" +postid+ "\" onclick=\"certifyPost('" +baseUrl+ "','" +postid+ "')\" style=\" color: #262F56;\" class=\"fa fa-certificate pr-2 cert_click \"></i>" + data.count;
      else 
        e_parent.innerHTML = "<i id=\"" +postid+ "\" onclick=\"certifyPost('" +baseUrl+ "','" +postid+ "')\" style=\" color: gray;\" class=\"fa fa-certificate pr-2 cert_click \"></i>" + data.count;
        })
    .catch(error => console.error('Unable to get items.', error));
  }
  
</script>