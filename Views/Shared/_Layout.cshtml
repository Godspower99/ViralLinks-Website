@{
    var background = string.IsNullOrWhiteSpace(ViewBag.BackgroundColor) ? "#F0F0F0" : $"{ViewBag.BackgroundColor}";
}


<!DOCTYPE html>
<html lang="en">
    <head style="overflow-y: auto;">
        <meta name="viewport" content="width=device-width"/>
        <title>
            @ViewBag.Title | Viral Links
        </title>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/lib/fontawesome/css/all.css">
        <!-- Google Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <!-- Bootstrap core CSS -->
        <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="~/lib/mdbootstrap/css/mdb.min.css" rel="stylesheet">
        <!-- JQuery -->
        <script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="~/lib/popper.js/umd/popper.min.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="~/lib/mdbootstrap/js/mdb.min.js"></script>
        <link rel="stylesheet" href="~/css/site.css"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="~/css/sidenav.css">
    </head>

    <body style="width: 100%; padding: 0%; margin: 0px; background-color: @background;">
        <!-- Webpage Container -->
        <div class="container-fluid p-0">    

