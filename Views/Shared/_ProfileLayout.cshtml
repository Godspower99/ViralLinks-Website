@model BasePageModel
@{
  var background = string.IsNullOrWhiteSpace(ViewBag.BackgroundColor) ? "#F0F0F0" : $"{ViewBag.BackgroundColor}";
  var request = Context.Request;
  var baseUri = string.Concat(request.Scheme, "://", request.Host.ToUriComponent());
  var userIsAuthorized = Context.User.Identity.IsAuthenticated;
}


<!DOCTYPE html>
<html lang="en">
    <head style="overflow-y: auto;">
        <meta name="viewport" content="width=device-width"/>
        <title>
            @ViewBag.Title | Viral Links
        </title>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/lib/fontawesome/css/all.css">
        <!-- Google Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <!-- Bootstrap core CSS -->
        <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="~/lib/mdbootstrap/css/mdb.min.css" rel="stylesheet">
        <!-- JQuery -->
        <script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="~/lib/popper.js/umd/popper.min.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="~/lib/mdbootstrap/js/mdb.min.js"></script>
        <link rel="stylesheet" href="~/css/site.css"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="~/css/sidenav.css">
    </head>

    <body style="width: 100%; padding: 0%; margin: 0px; background-color: @background;">
        <!-- Webpage Container -->
        <div class="container-fluid p-0">    

          <!--Navbar-->
          <nav class="row navbar fixed-top pb-0" style="box-shadow: none; background-color: #E5E5E5;">
            <div class="col-12">
              <div class="container-fluid p-0">
                <div class="col-md-2 p-0 col-sm-0"></div>
                <div class="col-md-8 p-0 col-sm-12">
                  <div class="float-left pb-2 pl-4 text-center">
                    <div class="pb-2">
                      <a class="navbar-brand" asp-controller="home" asp-action="index" style="width:max-content;">
                        <img alt="logo" src="~/virallinks-logo.png" style="width: 3.5rem;"/>   
                      </a>
                    </div>
                    <div class="text-center">
                      <a id="NavMenuBar" class="navbar-brand nabMenuBar"><i class="fa fa-bars" style="font-size: 2.3rem;"></i> </a>
                    </div>
                  </div>
                  <div class="float-right pt-3 text-center">
                    @if(!userIsAuthorized)
                    {
                      <a asp-controller="Account" asp-action="SignIn">
                        <img class="post_item_image" src="@baseUri/avatar.png" style="width:4rem; height: 4rem;">
                          <p style="color: #262F56;">Sign in</p>
                      </a>
                    }
                    @if(userIsAuthorized)
                    {
                      <a asp-controller="Account" asp-action="SignOut">
                        <img class="post_item_image" src="@baseUri/logout.svg" style="width: 2rem; height: 2rem; border-radius:100%;">
                      </a>
                      <a asp-controller="Account" asp-action="SignOut">
                          <p class="icon-text pt-1" style="color: #262F56;">Log out</p>
                      </a>
                    }
                  </div>
                  <div>
                    <div class="pt-3">
                      <h3 style="color: #0395FF; font-size: 24px; line-height:28.13px; font-weight:400;">VIRALLINKS FORUM</h3>
                    </div>
                    <div class="pt-2">
                      <p style="text-transform: capitalize; color:#262F56; font-size:12px; line-height:20px; font-weight:300; margin-bottom:5px;">One link to rule them all!</p>
                      <p style="text-transform: capitalize; color:#262F56; font-size:12px; font-weight:300; line-height: 0.9rem;">
                        Post your links and go viral. get results, reap rewards.
                      </p>
                    </div>
                  </div>            
                </div>
                <div class="col-md-2 p-0 col-sm-0"></div>
              </div>
            </div>
              
            <div class="col-12" style="background-color: #0395FF; height:5px;"></div>
          </nav>        

          <div class="row">
            <div class="col-12 p-0" >
              <div class="container">
                <div class="row">
                  <div class="col">
                    <div class="row">
                      <div id="SideNavID" class="col sideNavClose" style="margin-top: 100px;">
                        <div class="container-fluid">
                          <div class="row sidenav-items-wrapper">

                            <!-- Feeds for you -->
                            <div class="col-12 p-0">
                              <a asp-controller="Home" asp-action="Index">
                                <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                  <i class="fa fa-users text-white" style="font-size: 15px; padding-top: 10px;"></i>
                                </div>
                                <div class="float-left pl-3 pt-2 side-nav-item-text">
                                  <p>Feeds for you</p>
                                </div>
                              </a>
                            </div>
                            <div class="col-12 m-0 p-0 text-center">
                              <div class="float-left" style="height: 30px; background-color: #A39468;  width: 1.5px; margin-left: 17px; margin-top: -7px;">
                              </div>
                            </div>
    
                            <!-- VIP Lounge -->
                            <div class="col-12 p-0">
                              <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                <i class="fa fa-user-check text-white" style="font-size: 15px; padding-top: 10px;"></i>
                              </div>
                              <div class="float-left pl-3 pt-2 side-nav-item-text">
                                <p>VIP lounge</p>
                              </div>
                            </div>
                            <div class="col-12 m-0 p-0 text-center">
                              <div class="float-left" style="height: 30px; background-color: #A39468;  width: 1.5px; margin-left: 17px; margin-top: -7px;">
                              </div>
                            </div>
                            
                            <!-- Telecom VTU -->
                            <div class="col-12 p-0">
                              <a href="https://clubkash.com/noble" target="_blank">
                                <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                  <i class="fa fa-mobile text-white" style="font-size: 15px; padding-top: 10px;"></i>
                                </div>
                                <div class="float-left pl-3 pt-2 side-nav-item-text">
                                  <p>Telecom VTU</p>
                                </div>
                              </a>
                            </div>
                            <div class="col-12 m-0 p-0 text-center">
                              <div class="float-left" style="height: 30px; background-color: #A39468;  width: 1.5px; margin-left: 17px; margin-top: -7px;">
                              </div>
                            </div> 
                            
                            <!-- Admin Giveaway -->
                            <div class="col-12 p-0">
                              <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                <i class="fa fa-dollar-sign text-white" style="font-size: 15px; padding-top: 10px;"></i>
                              </div>
                              <div class="float-left pl-3 pt-2 side-nav-item-text">
                                <p>Admin giveaway</p>
                              </div>
                            </div>
                            <div class="col-12 m-0 p-0 text-center">
                              <div class="float-left" style="height: 30px; background-color: #A39468;  width: 1.5px; margin-left: 17px; margin-top: -7px;">
                              </div>
                            </div>  
                            
                            <!-- Membership -->
                            <div class="col-12 p-0">
                              <a asp-controller="Account" asp-action="MembershipDescription">
                                <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                <i class="material-icons text-white" style="font-size: 25px; padding-top: 5px;">supervisor_account</i>
                              </div>
                              <div class="float-left pl-3 pt-2 side-nav-item-text">
                                <p>Membership</p>
                              </div>
                              </a>
                            </div>
                            <div class="col-12 m-0 p-0 text-center">
                              <div class="float-left" style="height: 30px; background-color: #A39468;  width: 1.5px; margin-left: 17px; margin-top: -7px;">
                              </div>
                            </div>                          
                            
                            <!-- About -->
                            <div class="col-12 p-0">
                              <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                <i class="fa fa-th-large text-white" style="font-size: 15px; padding-top: 10px;"></i>
                              </div>
                              <div class="float-left pl-3 pt-2 side-nav-item-text">
                                <p>About Virallinks</p>
                              </div>
                            </div>
                            <div class="col-12 m-0 p-0 text-center">
                              <div class="float-left" style="height: 30px; background-color: #A39468;  width: 1.5px; margin-left: 17px; margin-top: -7px;">
                              </div>
                            </div>                          
                            
                            <!-- Contact -->
                            <div class="col-12 p-0">
                              <div class="float-left text-center" style="height: 35px; background-color: #0395FF; border-radius: 100%; width: 35px;">
                                <i class="fa fa-phone text-white" style="font-size: 15px; padding-top: 10px;"></i>
                              </div>
                              <div class="float-left pl-3 pt-2 side-nav-item-text">
                                <p>Contact us</p>
                              </div>
                            </div>                         
    
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
                <div id="ContentOverlayID"  class="ContentOverlayClose"></div>
                <div class="pl-3" style="margin-top: 10rem">
                    @RenderBody()
                </div>
            </div>
          </div>    
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <partial name="_ValidationScriptsPartial"/>

      <script type="text/javascript">
        $('#NavMenuBar').click(function () {
            SideMenuOpenClose();
        });
    
        $('#ContentOverlayID').click(function () {
            SideMenuOpenClose();
        });
    
        function SideMenuOpenClose() {
            let SideNavID= $('#SideNavID');
            let ContentOverlayID= $('#ContentOverlayID');
            let menuText=$('.menuText');
            if(SideNavID.hasClass('sideNavClose')){
                SideNavID.removeClass('sideNavClose')
                SideNavID.addClass('sideNavOpen')
                menuText.removeClass('d-none');
                ContentOverlayID.removeClass('ContentOverlayClose')
                ContentOverlayID.addClass('ContentOverlay')
            }else{
                SideNavID.removeClass('sideNavOpen')
                SideNavID.addClass('sideNavClose')
                menuText.addClass('d-none');
                ContentOverlayID.removeClass('ContentOverlay')
                ContentOverlayID.addClass('ContentOverlayClose')
            }
        }
    </script>
    </body>

    <style>
      .icon-text{
        color: #262F56;
        font-weight: 400;
        font-size: 14px;
        text-align: center;
        cursor:pointer;
      }
      .icon-text:hover{
        font-size: 16px;
        text-decoration: underline;
      }
    </style>
</html>
