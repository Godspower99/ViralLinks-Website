                    <!-- First Post -->
                    <div class="col-12 p-0 pl-4 pr-2 pb-2">
                      <div class="post_item" style="height: 370px;">
                        <div class="container">
                          <div class="row pt-3">
                            <!--Image and name-->
                            <div class="col-12">
