@model Post;

@{
    ViewBag.Title = "Post";
    var request = Context.Request;
    var baseUri = string.Concat(request.Scheme, "://", request.Host.ToUriComponent());
    var userIsAuthorized = Context.User.Identity.IsAuthenticated;
    var postItemIconClass = userIsAuthorized? "col-2" : "col-4 text-center";
}

            <!-- Feeds for you -->
            <div class="row pt-0">
              <div class="col-md-3"></div>
              <div class="col-md-6">
                <div class="container p-0">
                  <div class="row pb-2 pt-2 style="background-color:transparent; margin-left: 1px; height: 100px;">
                    <!-- First Post -->
                    <div class="col-12 p-0 pl-4 pr-2 pb-2">
                      <div class="post_item" style="height: 370px;">
                        <div class="container">
                          <div class="row pt-3">
                            <!--Image and name-->
                            <div class="col-12">
                              <img class="float-left post_item_image" src="@Model.UserImageURI">
                              <p class="float-left pl-3 pt-2 post_item_name">@Model.Username <br> <span class="post_item_category">.@Model.CategoryHeader</span></p>
                              <p class="float-right pr-3 pt-2 post_item_date">@Model.TimeStamp.GetTimeAgo()</p>
                            </div> 
                            @* <!--Subject-->
                            <div class="col-12">
                              <p class="pl-3 pt-0 post_item_subject">@Model.Subject</p>
                            </div>       *@
                            <!--Description--> 
                            <div class="col-12 text-center" style="height: max-content;">
                              <img class="post_item_description_image" src="@Model.ImageURI" style="height: 300px; width: 80%;">
                            </div>
                             <!-- icons -->              
                            <div class="col-12 pt-2 pb-2">
                              <div class="container pl-4">
                                <div class="row">
                                  <!-- Views -->
                                  <div class="col-4 p-0 pl-5">
                                    <p style="color: rgb(12, 11, 11); opacity: 0.5; font-size: 16px;"><i class="fa fa-eye"></i> 187</p>
                                  </div>
                                  <!-- Comments -->
                                  <div class="comments-icon @postItemIconClass p-0">
                                    <p style="font-size: 16px;"><i class="fa fa-comments"></i> 5</p>
                                  </div>
                                  <!-- liked -->
                                  <div class="likes-icon @postItemIconClass p-0">
                                    <p style="font-size: 16px;"><i class="fa fa-certificate"></i> 24</p>
                                  </div>
                                 @if(userIsAuthorized)
                                 {
                                    <!-- save post -->
                                    <div class="@postItemIconClass">
                                      <p style="font-size: 16px;"><i class="material-icons">turned_in_not</i></p>
                                    </div>
                                    <!-- menu -->
                                    <div class="@postItemIconClass">
                                      <p style="font-size: 16px;"><i class="fa fa-ellipsis-v" style="color: #0395FF;"></i></p>
                                    </div>
                                 }
                                </div>
                              </div>
                            </div>

                            <!--Link-->
                            <div class="col-12 pt-0 pl-5 pr-5">
                              <p class="pt-2 pl-5 pr-5 post_item_description_text">@Model.Description</p>
                              <a href="@Model.PostLink">
                               <p class="post_item_link"> @Model.PostLink</p>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>                   
                  </div>
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>

<style>
 .post_item {
   background-color: #F0F0F0;
   border-radius: 5px;
 }
 
 .post_item_image {
   border-radius: 100%; 
   height: 40px; 
   width: 40px;
 }
 
 .post_item_name {
   font-size: 16px;
   font-weight: 400;
   text-transform: capitalize;
 }
 
 .post_item_category {
   color: #0395FF;
   font-size: 13px;
   font-weight: 400;
 }
 
 .post_item_date {
   font-size: 14px;
   color: black;
   font-weight: 300;
 }
 
 .post_item_subject {
   color: #262F56;
   font-size: 16px;
   font-weight: 400;
 }
 
 .post_item_description_image {
   width: 300px;
   height: 273;
   border-radius: 5px; 
   margin:10px;
 }
 
 .post_item_description_text {
   font-size: 16px;
   font-weight: 400;
 }
 
 .post_item_link {
   color: #0395FF;
   font-size: 16px;
   font-weight: 400;
   font-style: italic;
 }

 .post_item_link:hover{
  text-decoration: underline;
}

.comments-icon{
  color: #0395FF;
}

.likes-icon{
  color:#262F56;
}

.save-icon{
  color:#0395FF;
}
 </style>